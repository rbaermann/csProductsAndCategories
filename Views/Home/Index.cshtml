@using productsAndCategories.Models
@model ProductsAndListProducts

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Document</title>
    </head>
    <body>
        <h1>Products | <a href="/categories">Categories</a></h1>
        <div>
            <h3>New Product</h3>

            <form asp-action="CreateProduct" asp-controller="Home" method="POST">

                <span asp-validation-for="NewProduct.Name"></span>
                <label asp-for="NewProduct.Name">Name</label>
                <input asp-for="NewProduct.Name">

                <span asp-validation-for="NewProduct.Description"></span>
                <label asp-for="NewProduct.Description">Description</label>
                <textarea asp-for="NewProduct.Description"></textarea>

                <span asp-validation-for="NewProduct.Price"></span>
                <label asp-for="NewProduct.Price">Price</label>
                <input type="number" step="0.01" asp-for="NewProduct.Price">

                <input type="submit" value="Add Product">

            </form>
        </div>

        <div>
            <h3>Existing Products</h3>
            @{
                foreach(Product product in Model.ListOfProducts)
                {
                    <a href="product/@product.ProductId">@product.Name</a>
                }
            }
        </div>
    </body>
</html>